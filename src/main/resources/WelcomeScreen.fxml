<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #E8EDE7;">
        <children>
            <Label layoutX="350.0" layoutY="200.0" text="Welcome to Bullet Journal!" style="-fx-text-fill:
            #1A2902" textAlignment="CENTER" alignment="CENTER">
                <font>
                    <Font name="Georgia" size="40.0"/>
                </font>
            </Label>
            <HBox layoutX="380" layoutY="400" alignment="CENTER" spacing="20">
            <Button fx:id="prevWeekButton" layoutX="540.0" layoutY="450.0" prefWidth="200.0" prefHeight="100"
                    text="Select Previous Week" style="-fx-background-color: #378BA4; -fx-text-fill: #1A2902">
                <font>
                    <Font name="Tahoma" size="18"/>
                </font>
            </Button>
            <Button fx:id="newWeekButton" layoutX="540.0" layoutY="500.0" prefWidth="200.0" prefHeight="100"
                    text="Create New Week" style="-fx-background-color: #378BA4; -fx-text-fill: #1A2902">
                <font>
                    <Font name="Tahoma" size="18"/>
                </font>
            </Button>
            </HBox>
        </children>
    </AnchorPane>
</Scene>
