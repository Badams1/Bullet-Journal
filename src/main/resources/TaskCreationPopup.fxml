<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="800.0" prefWidth="600.0" style="-fx-background-color: #AEC09A;">
        <children>
            <VBox layoutX="100" layoutY="100" spacing="20">
                <Label style="-fx-font-size: 24px;" text="Create New Task"/>
                <HBox spacing="20">
                    <Label style="-fx-font-size: 18px;" text="Name:"/>
                    <TextField fx:id="taskName" style="-fx-font-size: 18px; -fx-background-color: #b7c9a3; -fx-text-fill: #1A2902"/>
                </HBox>
                <VBox spacing="20">
                    <Label style="-fx-font-size: 18px;" text="Description:"/>
                    <TextArea fx:id="taskDescription" prefHeight="150.0" prefWidth="400.0"
                              style="-fx-font-size: 18px; -fx-background-color: #b7c9a3; -fx-text-fill: #1A2902" wrapText="true"/>
                </VBox>
                <HBox spacing="20">
                    <Label style="-fx-font-size: 18px;" text="Day of Week:"/>
                    <MenuButton fx:id="dayOfWeekButton2" maxHeight="60.0" minHeight="60.0" minWidth="180.0"
                                prefHeight="60.0" prefWidth="180.0" style="-fx-font-size: 18px; -fx-background-color:
                                #778D45; -fx-text-fill: #1A2902" text="...">
                        <items>
                            <MenuItem fx:id="sundayItem2" text="SUNDAY" style="-fx-font-size: 18px; -fx-background-color:
                                #778D45; -fx-text-fill: #1A2902"/>
                            <MenuItem fx:id="mondayItem2" text="MONDAY" style="-fx-font-size: 18px; -fx-background-color:
                                #778D45; -fx-text-fill: #1A2902"/>
                            <MenuItem fx:id="tuesdayItem2" text="TUESDAY" style="-fx-font-size: 18px; -fx-background-color:
                                #778D45; -fx-text-fill: #1A2902"/>
                            <MenuItem fx:id="wednesdayItem2" text="WEDNESDAY" style="-fx-font-size: 18px; -fx-background-color:
                                #778D45; -fx-text-fill: #1A2902"/>
                            <MenuItem fx:id="thursdayItem2" text="THURSDAY" style="-fx-font-size: 18px; -fx-background-color:
                                #778D45; -fx-text-fill: #1A2902"/>
                            <MenuItem fx:id="fridayItem2" text="FRIDAY" style="-fx-font-size: 18px; -fx-background-color:
                                #778D45; -fx-text-fill: #1A2902"/>
                            <MenuItem fx:id="saturdayItem2" text="SATURDAY" style="-fx-font-size: 18px; -fx-background-color:
                                #778D45; -fx-text-fill: #1A2902"/>
                        </items>
                    </MenuButton>
                </HBox>
                <HBox spacing="20">
                    <Label style="-fx-font-size: 18px;" text="Completed:"/>
                    <CheckBox fx:id="taskCheckBox"/>
                </HBox>
                <HBox layoutX="100" layoutY="100" spacing="20">
                    <Button fx:id="createTaskButton" style="-fx-font-size: 18px; -fx-background-color: #778D45;
                            -fx-text-fill: #1A2902" text="CREATE">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Button>
                    <Button fx:id="exitButton" style="-fx-font-size: 18px; -fx-background-color: #778D45;
                            -fx-text-fill: #1A2902" text="EXIT">
                        <font>
                            <Font name="System Bold" size="16.0"/>
                        </font>
                    </Button>
                </HBox>
            </VBox>
        </children>
    </AnchorPane>
</Scene>
